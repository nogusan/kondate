<!DOCTYPE html>
<html>
  <head>
    <title>Kondate</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">kondate</a></h1>
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
      <% if user_signed_in? %>
        <div class="header_next">
          <div class="second_title_ber">
            <div class="second_title">
              <%= link_to "献立登録", "/" %>
            </div>
            <div class="second_title">
              <%= link_to "マイ栄養素確認", specs_path %>
            </div>
            <div class="second_title">
              <%= link_to "マイ栄養素設定", edit_spec_path(current_user) %>
            </div>
            <div class="second_title">
              <%= link_to "menu登録", new_menu_path %>
            </div>
          </div>
          <div class="hello_user">
          こんにちは
          <% if user_signed_in? %>
            <%= current_user.nickname %>さん
          <% end %>
          </div>
        </div>
      <% else %>
        <div class="header_next">
          <div class="second_title_ber">
            <div class="second_title">
              <%= link_to "献立登録", new_user_registration_path %>
            </div>
            <div class="second_title">
              <%= link_to "マイ栄養素確認", new_user_registration_path %>
            </div>
            <div class="second_title">
              <%= link_to "マイ栄養素設定", new_user_registration_path %>
            </div>
            <div class="second_title">
              <%= link_to "menu登録", new_user_registration_path %>
            </div>
          </div>
        </div>
      <% end %>
      
    </header>

    <%= yield %>

    <footer>
      <p>
        Copyright kondate 2023.
      </p>
    </footer>
  </body>
</html>
